<UserControl
    x:Class="digital_wellbeing_app.Views.Sound.SoundTimelineView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:digital_wellbeing_app.ViewModels"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:conv="clr-namespace:digital_wellbeing_app.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="500"
    d:DesignWidth="800"
    Background="Transparent">

    <UserControl.DataContext>
        <vm:SoundTimelineViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <conv:TimelineWidthConverter    x:Key="TimelineWidthConverter" />
        <conv:HourToOffsetConverter     x:Key="HourToOffsetConverter" />
        <conv:HourDynamicLabelConverter x:Key="HourDynamicLabelConverter" />
        <conv:HourVisibilityConverter   x:Key="HourVisibilityConverter" />
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="8">

            <!-- Page Header -->
            <TextBlock Text="Sound Output"
                       Style="{StaticResource HeadingLarge}"
                       Margin="0,0,0,24"/>

            <!-- Stats Cards Row -->
            <WrapPanel Orientation="Horizontal" Margin="0,0,0,24">

                <!-- Total Listening Card -->
                <Border Style="{StaticResource CardStat}" MinWidth="180">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <Border Background="{DynamicResource Status.Info}"
                                    CornerRadius="6" Padding="6">
                                <md:PackIcon Kind="VolumeHigh" Width="16" Height="16"
                                             Foreground="{DynamicResource Accent.OnAccent}"/>
                            </Border>
                            <TextBlock Text="Listening"
                                       Style="{StaticResource LabelPrimary}"
                                       Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Grid.Row="1"
                                   Text="{Binding TotalListeningText}"
                                   Style="{StaticResource StatNumber}"
                                   VerticalAlignment="Center"
                                   Margin="0,12,0,0"/>
                    </Grid>
                </Border>

                <!-- Harmful Exposure Card -->
                <Border Style="{StaticResource CardStat}"
                        MinWidth="180"
                        BorderBrush="{DynamicResource Status.Danger}"
                        BorderThickness="0,0,0,3">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <Border Background="{DynamicResource Status.Danger}"
                                    CornerRadius="6" Padding="6">
                                <md:PackIcon Kind="VolumeOff" Width="16" Height="16"
                                             Foreground="{DynamicResource Accent.OnAccent}"/>
                            </Border>
                            <TextBlock Text="Harmful"
                                       Style="{StaticResource LabelPrimary}"
                                       Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Grid.Row="1"
                                   Text="{Binding TotalHarmfulText}"
                                   FontFamily="{StaticResource Font.Primary}"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource Status.Danger}"
                                   VerticalAlignment="Center"
                                   Margin="0,12,0,0"/>

                        <!-- Threshold Label -->
                        <TextBlock Grid.Row="2"
                                   Text="{Binding ThresholdLabel}"
                                   Style="{StaticResource LabelSecondary}"
                                   HorizontalAlignment="Center"
                                   Margin="0,4,0,0"/>
                    </Grid>
                </Border>

            </WrapPanel>

            <!-- Timeline Section -->
            <TextBlock Text="TODAY'S ACTIVITY"
                       Style="{StaticResource NavSectionHeader}"
                       Margin="0,0,0,12"/>

            <!-- Timeline -->
            <Border x:Name="TimelineBorder"
                    Style="{StaticResource CardBase}"
                    Padding="16"
                    Margin="0,0,0,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>

                    <Border Background="{DynamicResource Bg.Elevated}"
                            CornerRadius="4"
                            Height="40"
                            VerticalAlignment="Center">
                        <Canvas x:Name="RealTimeCanvas" Background="Transparent"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Hour Labels -->
            <ItemsControl ItemsSource="{Binding HourMarkers}"
                          Margin="16,0,16,8"
                          Width="{Binding ActualWidth, ElementName=TimelineBorder}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="1" Columns="24"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Style="{StaticResource LabelMuted}"
                                   HorizontalAlignment="Center">
                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource HourDynamicLabelConverter}">
                                    <Binding/>
                                    <Binding ElementName="TimelineBorder" Path="ActualWidth"/>
                                </MultiBinding>
                            </TextBlock.Text>
                            <TextBlock.Visibility>
                                <MultiBinding Converter="{StaticResource HourVisibilityConverter}">
                                    <Binding/>
                                    <Binding ElementName="TimelineBorder" Path="ActualWidth"/>
                                </MultiBinding>
                            </TextBlock.Visibility>
                        </TextBlock>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Timeline Legend -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,24">
                <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                    <Border Width="12" Height="12" 
                            Background="{DynamicResource Accent.Primary}"
                            CornerRadius="2"
                            VerticalAlignment="Center"/>
                    <TextBlock Text="Safe"
                               Style="{StaticResource LabelMuted}"
                               Margin="6,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Border Width="12" Height="12" 
                            Background="{DynamicResource Status.Danger}"
                            CornerRadius="2"
                            VerticalAlignment="Center"/>
                    <TextBlock Text="Harmful"
                               Style="{StaticResource LabelMuted}"
                               Margin="6,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <!-- Session Details Section -->
            <TextBlock Text="SESSION DETAILS"
                       Style="{StaticResource NavSectionHeader}"
                       Margin="0,0,0,12"/>

            <Border Style="{StaticResource CardBase}">
                <StackPanel>
                    <!-- Header with toggle and summary -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="ToggleDetailsButton"
                                Content="Show detailed tracking"
                                Click="ToggleDetailsButton_Click"
                                Style="{StaticResource ButtonSecondary}"
                                HorizontalAlignment="Left"/>

                        <TextBlock Grid.Column="1"
                                   Text="{Binding SessionSummaryText}"
                                   Style="{StaticResource LabelMuted}"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Scrollable sessions list -->
                    <ScrollViewer x:Name="SessionsList"
                                  MaxHeight="320"
                                  VerticalScrollBarVisibility="Auto"
                                  Padding="0,0,8,0">
                        <ItemsControl ItemsSource="{Binding RecentSessions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource Bg.Elevated}"
                                            CornerRadius="6"
                                            Padding="12"
                                            Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Device Icon -->
                                            <Border Grid.Column="0"
                                                    Background="{DynamicResource Accent.Subtle}"
                                                    CornerRadius="6"
                                                    Padding="8"
                                                    VerticalAlignment="Center">
                                                <md:PackIcon Kind="{Binding DeviceTypeIcon}" 
                                                             Width="20" Height="20"
                                                             Foreground="{DynamicResource Accent.Primary}"/>
                                            </Border>

                                            <!-- Device Info -->
                                            <StackPanel Grid.Column="1" 
                                                        Margin="12,0,0,0" 
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="{Binding DeviceName}"
                                                           Style="{StaticResource BodyMedium}"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxWidth="200"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                    <TextBlock Text="{Binding DeviceType}"
                                                               Style="{StaticResource LabelMuted}"/>
                                                    <TextBlock Text=" · "
                                                               Style="{StaticResource LabelMuted}"/>
                                                    <TextBlock Text="{Binding SessionLabel}"
                                                               Style="{StaticResource LabelMuted}"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Peak SPL Badge -->
                                            <Border Grid.Column="2"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    VerticalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="{DynamicResource Accent.Subtle}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding WasHarmful}" Value="True">
                                                                <Setter Property="Background" Value="{DynamicResource Status.Danger}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding PeakSPLText}">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock" BasedOn="{StaticResource LabelSecondary}">
                                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                                            <Setter Property="Foreground" Value="{DynamicResource Accent.Primary}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding WasHarmful}" Value="True">
                                                                    <Setter Property="Foreground" Value="{DynamicResource Text.Primary}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
