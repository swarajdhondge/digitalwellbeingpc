<UserControl
    x:Class="digital_wellbeing_app.Views.Screen.ScreenView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:conv="clr-namespace:digital_wellbeing_app.Converters"
    mc:Ignorable="d"
    d:DesignHeight="600" d:DesignWidth="800"
    Background="Transparent">

    <UserControl.Resources>
        <conv:TimelineWidthConverter    x:Key="TimelineWidthConverter" />
        <conv:HourToOffsetConverter     x:Key="HourToOffsetConverter" />
        <conv:HourDynamicLabelConverter x:Key="HourDynamicLabelConverter" />
        <conv:HourVisibilityConverter   x:Key="HourVisibilityConverter" />
        <conv:UsageToWidthConverter     x:Key="UsageToWidthConverter" />
        <conv:TrackingStateToTextConverter  x:Key="StateToTextConverter" />
        <conv:TrackingStateToColorConverter x:Key="StateToColorConverter" />
        <conv:GoalProgressToColorConverter  x:Key="GoalProgressToColorConverter" />
        <conv:GoalProgressToWidthConverter  x:Key="GoalProgressToWidthConverter" />
        <conv:BoolToVisibilityConverter     x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="8">

            <!-- Page Header with Status Indicator -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Screen Time"
                           Style="{StaticResource HeadingLarge}"/>

                <!-- Status Indicator (Phase 2.1) -->
                <Border Grid.Column="1"
                        Background="{DynamicResource Bg.Elevated}"
                        CornerRadius="12"
                        Padding="10,6"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="8" Height="8"
                                 Fill="{Binding TrackingState, Converter={StaticResource StateToColorConverter}}"
                                 VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding TrackingState, Converter={StaticResource StateToTextConverter}}"
                                   Style="{StaticResource LabelSecondary}"
                                   Margin="6,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Today's Stats Card -->
            <Border Style="{StaticResource CardBase}" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icon -->
                    <Border Grid.Column="0"
                            Background="{DynamicResource Accent.Primary}"
                            CornerRadius="8"
                            Padding="12"
                            VerticalAlignment="Center">
                        <md:PackIcon Kind="Monitor" Width="28" Height="28"
                                     Foreground="{DynamicResource Accent.OnAccent}"/>
                    </Border>

                    <!-- Stats -->
                    <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Today's Screen Time"
                                   Style="{StaticResource LabelSecondary}"/>
                        <TextBlock Text="{Binding TodayTimeText}"
                                   Style="{StaticResource StatNumber}"
                                   Margin="0,4,0,0"/>
                        <!-- Context Line (Phase 2.2) -->
                        <TextBlock Text="{Binding ContextLine}"
                                   Style="{StaticResource LabelMuted}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Goal Progress Bar (Phase 3.4) -->
            <Border Style="{StaticResource CardBase}" 
                    Margin="0,0,0,16"
                    Visibility="{Binding HasGoal, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Daily Goal"
                                   Style="{StaticResource LabelSecondary}"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding GoalProgressText}"
                                   Style="{StaticResource LabelPrimary}"/>
                    </Grid>
                    
                    <!-- Progress Bar -->
                    <Border x:Name="GoalProgressContainer"
                            Background="{DynamicResource Bg.Elevated}"
                            CornerRadius="4"
                            Height="8">
                        <Border Background="{Binding GoalProgress, Converter={StaticResource GoalProgressToColorConverter}}"
                                CornerRadius="4"
                                HorizontalAlignment="Left">
                            <Border.Width>
                                <MultiBinding Converter="{StaticResource GoalProgressToWidthConverter}">
                                    <Binding Path="GoalProgress"/>
                                    <Binding ElementName="GoalProgressContainer" Path="ActualWidth"/>
                                </MultiBinding>
                            </Border.Width>
                        </Border>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Quick Stats Row (Phase 2.3) -->
            <Border Style="{StaticResource CardBase}" Margin="0,0,0,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Sessions -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding SessionCount}"
                                   Style="{StaticResource HeadingMedium}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Sessions"
                                   Style="{StaticResource LabelMuted}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Longest -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding LongestSession}"
                                   Style="{StaticResource HeadingMedium}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Longest"
                                   Style="{StaticResource LabelMuted}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Breaks -->
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding BreakCount}"
                                   Style="{StaticResource HeadingMedium}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Breaks"
                                   Style="{StaticResource LabelMuted}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Timeline Section -->
            <TextBlock Text="TODAY'S ACTIVITY"
                       Style="{StaticResource NavSectionHeader}"
                       Margin="0,0,0,12"/>

            <!-- Timeline -->
            <Border x:Name="TimelineBorder"
                    Style="{StaticResource CardBase}"
                    Padding="16"
                    Margin="0,0,0,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>

                    <!-- Timeline Bar -->
                    <Border Grid.Row="1"
                            Background="{DynamicResource Bg.Elevated}"
                            CornerRadius="4"
                            Height="40"
                            VerticalAlignment="Center">
                        <Canvas x:Name="RealTimeCanvas" Background="Transparent"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Hour Labels -->
            <ItemsControl ItemsSource="{Binding HourMarkers}"
                          Margin="16,0,16,8"
                          Width="{Binding ActualWidth, ElementName=TimelineBorder}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="1" Columns="24"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Style="{StaticResource LabelMuted}"
                                   HorizontalAlignment="Center">
                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource HourDynamicLabelConverter}">
                                    <Binding/>
                                    <Binding ElementName="TimelineBorder" Path="ActualWidth"/>
                                </MultiBinding>
                            </TextBlock.Text>
                            <TextBlock.Visibility>
                                <MultiBinding Converter="{StaticResource HourVisibilityConverter}">
                                    <Binding/>
                                    <Binding ElementName="TimelineBorder" Path="ActualWidth"/>
                                </MultiBinding>
                            </TextBlock.Visibility>
                        </TextBlock>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Timeline Legend (Phase 2.4) -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,24">
                <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                    <Border Width="12" Height="12" 
                            Background="{DynamicResource Accent.Primary}"
                            CornerRadius="2"
                            VerticalAlignment="Center"/>
                    <TextBlock Text="Active"
                               Style="{StaticResource LabelMuted}"
                               Margin="6,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Border Width="12" Height="12" 
                            Background="{DynamicResource Bg.Elevated}"
                            CornerRadius="2"
                            VerticalAlignment="Center"/>
                    <TextBlock Text="Away"
                               Style="{StaticResource LabelMuted}"
                               Margin="6,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <!-- Weekly Usage Section -->
            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="THIS WEEK"
                           Style="{StaticResource NavSectionHeader}"/>
                <!-- Weekly Average (Phase 2.5) -->
                <TextBlock Grid.Column="1"
                           Style="{StaticResource LabelSecondary}">
                    <Run Text="Avg: "/>
                    <Run Text="{Binding WeeklyAverageText, Mode=OneWay}"/>
                </TextBlock>
            </Grid>

            <Border Style="{StaticResource CardBase}">
                <ItemsControl ItemsSource="{Binding WeeklyUsage}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Day Name -->
                                <TextBlock Grid.Column="0"
                                           Text="{Binding Day}"
                                           Style="{StaticResource BodyMedium}"
                                           VerticalAlignment="Center">
                                    <TextBlock.FontWeight>
                                        <Binding Path="IsToday">
                                            <Binding.Converter>
                                                <conv:BoolToVisibilityConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </TextBlock.FontWeight>
                                </TextBlock>

                                <!-- Progress Bar -->
                                <Border Grid.Column="1"
                                        Background="{DynamicResource Bg.Elevated}"
                                        CornerRadius="4"
                                        Height="8"
                                        Margin="16,0"
                                        VerticalAlignment="Center">
                                    <Border Background="{DynamicResource Accent.Primary}"
                                            CornerRadius="4"
                                            HorizontalAlignment="Left"
                                            Width="{Binding Usage, Converter={StaticResource UsageToWidthConverter}}"/>
                                </Border>

                                <!-- Duration -->
                                <TextBlock Grid.Column="2"
                                           Text="{Binding Usage}"
                                           Style="{StaticResource LabelPrimary}"
                                           VerticalAlignment="Center"
                                           MinWidth="80"
                                           TextAlignment="Right"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
