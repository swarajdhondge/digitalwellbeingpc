<UserControl
    x:Class="digital_wellbeing_app.Views.AppUsage.AppUsageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:digital_wellbeing_app.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="800"
    Background="{DynamicResource MaterialDesignPaper}">

    <UserControl.DataContext>
        <vm:AppUsageViewModel/>
    </UserControl.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock
      Text="📱 Today's App Usage"
      FontSize="22"
      FontWeight="Bold"
      Foreground="{DynamicResource MaterialDesignBody}"
      Margin="0,0,0,12"/>

        <!-- Table -->
        <Border
      Grid.Row="1"
      Background="{DynamicResource MaterialDesignCardBackground}"
      CornerRadius="6"
      Padding="12"
      Effect="{DynamicResource MaterialDesignElevation2}">

            <DataGrid
        ItemsSource="{Binding TodaysUsage}"
        AutoGenerateColumns="False"
        IsReadOnly="True"
        HeadersVisibility="Column"
        GridLinesVisibility="None"
        CanUserResizeColumns="False"
        CanUserSortColumns="False"
        Background="{DynamicResource MaterialDesignPaper}"
        RowBackground="{DynamicResource MaterialDesignCardBackground}"
        AlternatingRowBackground="{DynamicResource MaterialDesignPaper}"
        RowHeight="56"
        ScrollViewer.VerticalScrollBarVisibility="Auto"
        HorizontalScrollBarVisibility="Disabled">

                <DataGrid.Columns>
                    <!-- Icon -->
                    <DataGridTemplateColumn Width="72">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border
                  Width="40" Height="40"
                  Background="White"
                  CornerRadius="20"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center">
                                    <Image
                    Source="{Binding Icon}"
                    Width="32" Height="32"
                    Stretch="Uniform"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Application Name -->
                    <DataGridTextColumn
            Header="Application"
            Binding="{Binding AppName}"
            Width="*"/>

                    <!-- Duration -->
                    <DataGridTextColumn
            Header="Duration"
            Binding="{Binding DurationFormatted}"
            Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
