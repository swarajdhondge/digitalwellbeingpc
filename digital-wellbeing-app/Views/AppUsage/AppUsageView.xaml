<UserControl
    x:Class="digital_wellbeing_app.Views.AppUsage.AppUsageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:digital_wellbeing_app.ViewModels"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:conv="clr-namespace:digital_wellbeing_app.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="800"
    Background="Transparent">

    <UserControl.DataContext>
        <vm:AppUsageViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <conv:DurationToWidthConverter x:Key="DurationToWidthConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="8">

            <!-- Page Header -->
            <TextBlock Text="App Usage"
                       Style="{StaticResource HeadingLarge}"
                       Margin="0,0,0,24"/>

            <!-- Section Header -->
            <TextBlock Text="TODAY'S APPS"
                       Style="{StaticResource NavSectionHeader}"
                       Margin="0,0,0,12"/>

            <!-- App List -->
            <Border Style="{StaticResource CardBase}">
                <ItemsControl ItemsSource="{Binding TodaysUsage}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CardListItem}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- App Icon -->
                                    <Border Grid.Column="0"
                                            Background="{DynamicResource Bg.Elevated}"
                                            CornerRadius="8"
                                            Padding="6"
                                            Width="48" Height="48">
                                        <Image Source="{Binding Icon}"
                                               Width="32" Height="32"
                                               Stretch="Uniform"
                                               RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </Border>

                                    <!-- App Name + Progress Bar -->
                                    <StackPanel Grid.Column="1"
                                                Margin="16,0,16,0"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="{Binding AppName}"
                                                   Style="{StaticResource BodyMedium}"
                                                   FontWeight="SemiBold"/>
                                        <!-- Usage Bar -->
                                        <Border Background="{DynamicResource Bg.Elevated}"
                                                CornerRadius="3"
                                                Height="6"
                                                Margin="0,8,0,0">
                                            <Border Background="{DynamicResource Accent.Primary}"
                                                    CornerRadius="3"
                                                    HorizontalAlignment="Left"
                                                    Width="{Binding TotalDuration, Converter={StaticResource DurationToWidthConverter}}"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- Duration -->
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding DurationFormatted}"
                                               Style="{StaticResource LabelPrimary}"
                                               Foreground="{DynamicResource Accent.Primary}"
                                               VerticalAlignment="Center"
                                               MinWidth="70"
                                               TextAlignment="Right"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

            <!-- Empty State (shown when no apps) -->
            <StackPanel Style="{StaticResource EmptyStateContainer}"
                        Visibility="Collapsed">
                <TextBlock Style="{StaticResource EmptyStateIcon}" Text="📱"/>
                <TextBlock Style="{StaticResource EmptyStateTitle}" Text="No apps tracked yet"/>
                <TextBlock Style="{StaticResource EmptyStateDescription}"
                           Text="Start using some applications and they'll appear here."/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
