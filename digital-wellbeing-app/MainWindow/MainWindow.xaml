<!-- MainWindow.xaml -->
<Window
    x:Class="digital_wellbeing_app.MainWindow.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Digital Wellbeing"
    Height="600" Width="900"
    WindowStartupLocation="CenterScreen"
    FontFamily="Segoe UI"
    StateChanged="Window_StateChanged"
    Closing="Window_Closing"
    Style="{StaticResource MaterialDesignWindow}">

    <Grid>
        <!-- Title / Content rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Nav / Divider / Main columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="NavColumn" Width="160"/>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- TITLE BAR -->
        <DockPanel Grid.Row="0" Grid.ColumnSpan="3" Background="{DynamicResource PrimaryHueMidBrush}">
            <ToggleButton
          x:Name="Hamburger"
          Style="{StaticResource MaterialDesignHamburgerToggleButton}"
          Width="32" Height="32"
          Margin="8,8,0,8"
          Checked="Hamburger_Checked"
          Unchecked="Hamburger_Unchecked"
          VerticalAlignment="Center"/>
            <TextBlock
          Text="Digital Wellbeing"
          VerticalAlignment="Center"
          FontSize="16"
          Margin="8,0,0,0"/>
        </DockPanel>

        <!-- NAVIGATION RAIL -->
        <Grid Grid.Row="1" Grid.Column="0" Background="{DynamicResource PrimaryHueMidBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top nav buttons -->
            <StackPanel Grid.Row="0" Margin="0,8,0,0">
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                Height="48" Padding="8"
                HorizontalContentAlignment="Left"
                Click="Dashboard_Click">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <md:PackIcon Kind="ViewDashboardOutline" Width="24" Height="24" Margin="0,0,12,0"/>
                        <TextBlock Text="Dashboard" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                Height="48" Padding="8"
                HorizontalContentAlignment="Left"
                Click="ScreenTime_Click">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <md:PackIcon Kind="Monitor" Width="24" Height="24" Margin="0,0,12,0"/>
                        <TextBlock Text="Screen Time" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                Height="48" Padding="8"
                HorizontalContentAlignment="Left"
                Click="Sound_Click">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <md:PackIcon Kind="VolumeHigh" Width="24" Height="24" Margin="0,0,12,0"/>
                        <TextBlock Text="Sound Output" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                Height="48" Padding="8"
                HorizontalContentAlignment="Left"
                Click="AppUsage_Click">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <md:PackIcon Kind="ChartBar" Width="24" Height="24" Margin="0,0,12,0"/>
                        <TextBlock Text="App Usage" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Bottom nav: Settings & Exit -->
            <StackPanel Grid.Row="2" Margin="0,0,0,16">
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                Height="48" Padding="8"
                HorizontalContentAlignment="Left"
                Click="Settings_Click">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <md:PackIcon Kind="Cog" Width="24" Height="24" Margin="0,0,12,0"/>
                        <TextBlock Text="Settings" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                Height="48" Padding="8"
                HorizontalContentAlignment="Left"
                Click="Exit_Click">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <md:PackIcon Kind="LogoutVariant" Width="24" Height="24" Margin="0,0,12,0"/>
                        <TextBlock Text="Exit" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- DARK DIVIDER -->
        <Border
        Grid.Row="1"
        Grid.Column="1"
        Background="{DynamicResource PrimaryHueDarkBrush}"
        />

        <!-- MAIN CONTENT AREA -->
        <ContentControl
        x:Name="MainContent"
        Grid.Row="1"
        Grid.Column="2"
        Margin="16"/>
    </Grid>
</Window>
