<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 
    ============================================
    DARK THEME - Slate + Teal Palette
    ============================================
    -->

    <!-- Background Colors (Slate - Blue-Gray Tint) -->
    <Color x:Key="Bg.PrimaryColor">#0F172A</Color>         <!-- Slate 950 - Darkest (sidebar) -->
    <Color x:Key="Bg.SecondaryColor">#1E293B</Color>       <!-- Slate 900 - Content area -->
    <Color x:Key="Bg.CardColor">#334155</Color>            <!-- Slate 700 - Cards -->
    <Color x:Key="Bg.ElevatedColor">#475569</Color>        <!-- Slate 600 - Hover states -->

    <!-- Border Colors -->
    <Color x:Key="Border.DefaultColor">#334155</Color>     <!-- Slate 700 -->
    <Color x:Key="Border.SubtleColor">#1E293B</Color>      <!-- Slate 900 -->

    <!-- Text Colors -->
    <Color x:Key="Text.PrimaryColor">#F1F5F9</Color>       <!-- Slate 100 - Headings, body -->
    <Color x:Key="Text.SecondaryColor">#94A3B8</Color>     <!-- Slate 400 - Labels -->
    <Color x:Key="Text.MutedColor">#64748B</Color>         <!-- Slate 500 - Hints, disabled -->

    <!-- Accent Colors (Soft Teal) -->
    <Color x:Key="Accent.PrimaryColor">#2DD4BF</Color>     <!-- Teal 400 -->
    <Color x:Key="Accent.HoverColor">#5EEAD4</Color>       <!-- Teal 300 -->
    <Color x:Key="Accent.SubtleColor">#134E4A</Color>      <!-- Teal 900 - Icon badges -->
    <Color x:Key="Accent.OnAccentColor">#042F2E</Color>    <!-- Teal 950 - Text on accent -->

    <!-- Status Colors -->
    <Color x:Key="Status.SuccessColor">#22C55E</Color>     <!-- Green 500 -->
    <Color x:Key="Status.WarningColor">#F59E0B</Color>     <!-- Amber 500 -->
    <Color x:Key="Status.DangerColor">#EF4444</Color>      <!-- Red 500 -->
    <Color x:Key="Status.InfoColor">#3B82F6</Color>        <!-- Blue 500 -->

    <!-- ============================================ -->
    <!-- BRUSHES -->
    <!-- ============================================ -->

    <!-- Background Brushes -->
    <SolidColorBrush x:Key="Bg.Primary" Color="{StaticResource Bg.PrimaryColor}"/>
    <SolidColorBrush x:Key="Bg.Secondary" Color="{StaticResource Bg.SecondaryColor}"/>
    <SolidColorBrush x:Key="Bg.Card" Color="{StaticResource Bg.CardColor}"/>
    <SolidColorBrush x:Key="Bg.Elevated" Color="{StaticResource Bg.ElevatedColor}"/>

    <!-- Border Brushes -->
    <SolidColorBrush x:Key="Border.Default" Color="{StaticResource Border.DefaultColor}"/>
    <SolidColorBrush x:Key="Border.Subtle" Color="{StaticResource Border.SubtleColor}"/>

    <!-- Text Brushes -->
    <SolidColorBrush x:Key="Text.Primary" Color="{StaticResource Text.PrimaryColor}"/>
    <SolidColorBrush x:Key="Text.Secondary" Color="{StaticResource Text.SecondaryColor}"/>
    <SolidColorBrush x:Key="Text.Muted" Color="{StaticResource Text.MutedColor}"/>

    <!-- Accent Brushes -->
    <SolidColorBrush x:Key="Accent.Primary" Color="{StaticResource Accent.PrimaryColor}"/>
    <SolidColorBrush x:Key="Accent.Hover" Color="{StaticResource Accent.HoverColor}"/>
    <SolidColorBrush x:Key="Accent.Subtle" Color="{StaticResource Accent.SubtleColor}"/>
    <SolidColorBrush x:Key="Accent.OnAccent" Color="{StaticResource Accent.OnAccentColor}"/>

    <!-- Status Brushes -->
    <SolidColorBrush x:Key="Status.Success" Color="{StaticResource Status.SuccessColor}"/>
    <SolidColorBrush x:Key="Status.Warning" Color="{StaticResource Status.WarningColor}"/>
    <SolidColorBrush x:Key="Status.Danger" Color="{StaticResource Status.DangerColor}"/>
    <SolidColorBrush x:Key="Status.Info" Color="{StaticResource Status.InfoColor}"/>

    <!-- ============================================ -->
    <!-- SHADOWS (Darker for dark theme) -->
    <!-- ============================================ -->
    <DropShadowEffect x:Key="Shadow.SM" BlurRadius="4" ShadowDepth="1" Opacity="0.4" Color="#000000"/>
    <DropShadowEffect x:Key="Shadow.MD" BlurRadius="8" ShadowDepth="2" Opacity="0.5" Color="#000000"/>
    <DropShadowEffect x:Key="Shadow.LG" BlurRadius="16" ShadowDepth="4" Opacity="0.6" Color="#000000"/>

</ResourceDictionary>

